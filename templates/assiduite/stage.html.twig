 .row2
 {
  margin:0!important;

 } 
.loader-circle {
  position: absolute;
  left: 50%;
  top: 39%;
  width: 120px;
  height: 120px;
  border-radius: 50%;
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  margin-left: -60px;
  margin-top: -60px;
  z-index:4001;
}
.loader-content {
  position: absolute;
  left: 50%;
  top: 59%;
  transform: translate(-50%, -100%);
  color: white !important;
  font-family: Arial, sans-serif;
}
.loader-line-mask {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 60px;
  height: 120px;
  margin-left: -60px;
  margin-top: -60px;
  overflow: hidden;
  transform-origin: 60px 60px;
  -webkit-mask-image: -webkit-linear-gradient(top, #000000, rgba(0, 0, 0, 0));
  animation: rotate 1.2s infinite linear;
}
.loader-line-mask .loader-line {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.5);
}
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.three-dots{
  position:relative;
}
.three-dots:after {
  cursor: pointer;
  color: #6777ef;
  content: '\2807';
  font-size: 25px;
  padding: 0 5px;
}

a {
  cursor: pointer;
  text-decoration: none;
  color: white;
}

a div {
  padding: 2px;
}

.dropdownA {
  position: absolute;
  right: 1rem;
  top:1rem;
  background-color: #ffffff;
  box-shadow: 0px 0px 3px 3px #c4e2e7;
  outline: none;
  opacity: 0;
  z-index: -1;
  max-height: 0;
  transition: opacity 0.1s, z-index 0.1s, max-height: 5s;
}

.dropdown-container:focus {
  outline: none; 
}
.dropdown-container:focus .dropdownA {
  opacity: 1;
  z-index: 100;
  max-height: 100vh;
  transition: opacity 0.2s, z-index 0.2s, max-height: 0.2s;
}
.threepointscontainer{
    position: absolute;
