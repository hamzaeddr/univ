{# @import url('https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital@0;1&display=swap'); #}

{# * {
	box-sizing: border-box;
} #}

.grid {
	display: grid;
	font-size: calc(0.4rem + 0.5vw);
	margin: 0;
	color: #333;
	
	
}

h1 {
	grid-column: 2 / -1;
	font-weight: normal;
	border-bottom: 1px solid #999;
}

.grid {
	display: grid;
  grid-template-columns: auto repeat(7, 1fr);
  grid-template-rows: auto auto repeat(7, 1fr);
 
  gap: 1em;
	align-items: center;
	justify-content: center;
	text-align: center;
	max-width: 46em;
        margin-left: 300px;

}

.box {
	padding: 0.5em;

  border: 2px solid;
	display: flex;
	align-items: center;
	justify-content: center;
	font-style: italic;
	background: #f0f0f0;
	
	
}

.row-label {
	text-align: right;
}

tr.highlighty{
  background-color: rgb(220 245 255 / 73%) !important ;
  color: black;
}
tr.highlightysuccess{
  background-color: rgb(136 225 155 / 73%) !important ;
  color: black;
}
tr.highlightyerror{
  background-color: rgb(255 43 43 / 73%) !important ;
  color: black;
}
.odd{background-color:none;}
.loader {
  border: 16px solid #f3f3f3;
  border-radius: 50%;
  border-top: 16px solid grey;
  width: 20px;
  height: 20px;
  -webkit-animation: spin 2s linear infinite; /* Safari */
  animation: spin 2s linear infinite;
  margin-left: 778px;
}

/* Safari */
@-webkit-keyframes spin {
  0% { -webkit-transform: rotate(0deg); }
  100% { -webkit-transform: rotate(360deg); }
} 

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.notraiter{
  background:linear-gradient(90deg, transparent 23.6018%, #add8e6 23.6018%) left center / 30% 80%  no-repeat !important;
}
.traiter{
  background:linear-gradient(90deg, transparent 23.6018%, #90ee90 23.6018%) left center / 30% 80%  no-repeat !important;

}
.Verouiller{
  background:linear-gradient(90deg, transparent 23.6018%, #dc143c 23.6018%) left center / 30% 80%  no-repeat !important;

}
.column {
  float: left;
  width: 50%;
  padding: 10px;
  height: 400px; /* Should be removed. Only for demonstration */
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
.desconnected {
background: lightcoral !important;
}
.connected {
background: lightgreen !important;
}
/* ----- MODAL STYLE ----- */
  .modal-content {
    border-radius: 0;
    border: none;
  }

  .modal-header {
    border-bottom-color: #EEEEEE;
    background-color: #FAFAFA;
  }
  .loader2
  {
    position:absolute;
    height: 120vh;
    width:100%;
    Z-index:1000;
    display:none;

  }

  .body-loarder2{
    position:relative;
    height: 100%;
    width:100%;
  }
  .content-loader2
  {
    
    position:fixed;
    height: 100%;
    width:100%;
    background-color:black ;
    opacity:0.7;
    Z-index:1001;
    {# display:none; #}


  }
 .row2
 {
  margin:0!important;

 } 
.loader-circle {
  position: absolute;
  left: 50%;
  top: 39%;
  width: 120px;
  height: 120px;
  border-radius: 50%;
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  margin-left: -60px;
  margin-top: -60px;
  z-index:3001;
}
.loader-content {
  position: absolute;
  left: 50%;
  top: 59%;
  transform: translate(-50%, -100%);
  color: white !important;
  font-family: Arial, sans-serif;
}
.loader-line-mask {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 60px;
  height: 120px;
  margin-left: -60px;
  margin-top: -60px;
  overflow: hidden;
  transform-origin: 60px 60px;
  -webkit-mask-image: -webkit-linear-gradient(top, #000000, rgba(0, 0, 0, 0));
  animation: rotate 1.2s infinite linear;
}
.loader-line-mask .loader-line {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.5);
}
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
</style>

